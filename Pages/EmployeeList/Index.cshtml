@model EjadaCompany.Pages.EmployeeList.IndexModel

<br />
<div class="container row p-0 m-0">
    <div class="col-9">
        <h2 class="text-info">Employees List</h2>
    </div>
    <div class="col-3">
        <a asp-page="AddNewEmployee" class="btn btn-info form-control text-white">Add New Employee</a>
    </div>


    <div class="col-12 border p-3">

        <table id="DT_load" class="table table-striped table-bordered" style="width:100%">
            <thead>
                <tr>
                    <th> Name</th>
                    <th> Team</th>
                    <th> Position</th>
                    <th> Branch</th>
                    <th> Email</th>
                    <th> Telphone</th>
                    <th> Address</th>
                    <th></th>
                </tr>
            </thead>
        </table>
    </div>
</div>
@*Add This Script For Loading Table with ID=DT_load*@
@section Scripts{
    <script src="~/js/EmployeeList.js"></script>
}



